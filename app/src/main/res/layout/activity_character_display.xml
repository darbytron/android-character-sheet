                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterWisdomLabel"
                android:text="@string/characterWisdom"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterWisdomView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterCharismaLabel"
                android:text="@string/characterCharisma"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterCharismaView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/characterStatsSubLabel"
            android:text="@string/characterStatsSub"
            android:textSize="@dimen/titleTextSize"
            android:background="@drawable/bottom_border"
            android:paddingTop="@dimen/topPadding"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterArmorClassLabel"
                android:text="@string/characterArmorClass"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterArmorClassView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterSpeedLabel"
                android:text="@string/characterSpeed"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterSpeedView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterInitiativeLabel"
                android:text="@string/characterInitiative"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterInitiativeView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterVisionLabel"
                android:text="@string/characterVision"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterVisionView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/characterFeatsStrengthsLabel"
            android:text="@string/characterFeatsTraits"
            android:textSize="@dimen/titleTextSize"
            android:background="@drawable/bottom_border"
            android:paddingTop="@dimen/topPadding"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/characterProficienciesLabel"
            android:text="@string/characterProficiencies"
            android:textSize="@dimen/titleTextSize"
            android:background="@drawable/bottom_border"
            android:paddingTop="@dimen/topPadding"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/characterSpellsLabel"
            android:text="@string/characterSpells"
            android:textSize="@dimen/titleTextSize"
            android:background="@drawable/bottom_border"
            android:paddingTop="@dimen/topPadding"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/characterInventoaryLabel"
            android:text="@string/characterInventory"
            android:textSize="@dimen/titleTextSize"
            android:background="@drawable/bottom_border"
            android:paddingTop="@dimen/topPadding"
            />

    </LinearLayout>

</ScrollView>
<android.support.design.widget.BottomNavigationView
    android:id="@+id/bottom_navigation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:theme="@style/Theme.AppCompat"
    app:menu="@menu/bottom_navigation_main" />
</RelativeLayout>

