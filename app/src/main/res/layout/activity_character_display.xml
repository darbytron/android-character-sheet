<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tylerdarby.charactersheet.activities.CharacterDisplayActivity"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/characterInformationLabel"
            android:text="@string/characterInfo"
            android:textSize="@dimen/titleTextSize"
            android:background="@drawable/bottom_border"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterNameLabel"
                android:text="@string/characterName"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterNameView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterRaceLabel"
                android:text="@string/characterRace"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterRaceView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterBackgroundLabel"
                android:text="@string/characterBackground"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterBackgroundView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterLevelLabel"
                android:text="@string/characterLevel"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterLevelView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterExperienceLabel"
                android:text="@string/characterExperience"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterExperienceView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterClassLabel"
                android:text="@string/characterClass"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterClassView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterAlignmentLabel"
                android:text="@string/characterAlignment"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterAlignmentView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/characterStatsMainLabel"
            android:text="@string/characterStatsMain"
            android:textSize="@dimen/titleTextSize"
            android:background="@drawable/bottom_border"
            android:paddingTop="@dimen/topPadding"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterStrengthLabel"
                android:text="@string/characterStrength"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterStrengthView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterConstitutionLabel"
                android:text="@string/characterConstitution"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterConstitutionView"
                android:text="@string/defaultDataString"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterDexterityLabel"
                android:text="@string/characterDexterity"
                android:textSize="@dimen/informationTextSize"
                android:layout_marginTop="@dimen/topPadding"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/characterDexterityView"
                android:text="@string/defaultDataString"
